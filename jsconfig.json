{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "noEmit": true,
    "types": ["./node_modules/vite/client.d.ts"]
  },
  "include": [
    "ambient.d.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./vite.config.js"
  ],
  "exclude": ["./node_modules/**", "./build/**"]
}
